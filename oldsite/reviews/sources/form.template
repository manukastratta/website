</SELECT>
</td><td align=center>
</td><td align=center>
<TEXTAREA NAME="self_comments" rows=4 cols=25></TEXTAREA>
</td>
[foreach]
<tr>
<td align=center>
<img width=150 height=200 src="../[pic]" border=1><br><b>[name]</b>
</td><td align=center>
<SELECT NAME="[id]_jtechnique">
