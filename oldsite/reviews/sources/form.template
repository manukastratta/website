[callbacksonly]
<td align=center>
<TEXTAREA NAME="[id]_comments" rows=4 cols=25></TEXTAREA>
</td>
</tr>
[endforeach]
  <tr><td align=center colspan=7><hr><p><INPUT TYPE="submit" VALUE="Submit"></td></tr>
</table>
